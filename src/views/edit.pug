extends base.pug

block content
    form(method="POST")
        input(name="title", placeholder="제목", value=video.title, required)
        input(placeholder="설명", required, type="text", name="description", minlength=2, value=video.description)
        input(placeholder="해시태그(쉼표로 구분하세요)", required, type="text", name="hashtags", value=video.hashtags.join()
        )
        input(value="저장", type="submit")
block scripts