extends base.pug

block content
   div.upload__container 
      div.upload__video
         video#preview
         button#actionBtn.social__btn Start Recording
      if errorMessage
         span=errorMessage
      form(method="POST", enctype="multipart/form-data")
         label(for="video") Video File
         input(type="file", id="video", name="video", accept="videos/*", required)
         label(for="thumb") Thumbnail File
         input(type="file", id="image/*", name="thumb", required)
         input(placeholder="Title", required, type="text", name="title", maxlength=30)
         input(placeholder="Description", required, type="text", name="description", minlength=2)
         input(placeholder="Hashtags, separated by comma", required, type="text", name="hashtags")
         input(value="Upload Video", type="submit")

block scripts
   script(src="/static/js/recorder.js")
