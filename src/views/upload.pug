extends base.pug

block content
   div.upload__container 
      //div.upload__video
         video#preview
         button#actionBtn.social__btn 녹화 시작
      if errorMessage
         span=errorMessage
      form(method="POST", enctype="multipart/form-data")
         label(for="video").upload__label 비디오 파일
         input(type="file", id="video", name="video", accept="videos/*", required)
         label(for="thumb").upload__label 이미지 파일
         input(type="file", id="image/*", name="thumb", required)
         input(placeholder="제목", required, type="text", name="title", maxlength=30)
         input(placeholder="설명", required, type="text", name="description", minlength=2)
         input(placeholder="해시태그(쉼표로 구분하세요)", required, type="text", name="hashtags")
         input(value="비디오 업로드", type="submit")
block scripts

